{
  "name": "101-app",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier -l --write \"**/*.js\"",
    "build": "tsc",
    "test": "jest",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "test:e2e": "playwright test",
    "test:persistence": "jest --testPathPattern=spec/persistence",
    "test:routes": "jest --testPathPattern=spec/routes",
    "dev": "nodemon -L --watch src --ignore src/frontend --exec \"tsc && node dist/index.js\"",
    "frontend:dev": "cd src/frontend && npm run dev",
    "frontend:build": "cd src/frontend && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.17.0",
    "sqlite3": "^5.0.2",
    "uuid": "^9.0.0",
    "wait-port": "^1.0.4"
  },
  "resolutions": {
    "ansi-regex": "5.0.1"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "dotenv": "^16.6.1",
    "jest": "^29.3.1",
    "nodemon": "^3.1.11",
    "prettier": "^2.7.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
