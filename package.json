{
  "name": "101-app",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier -l --write \"**/*.js\"",
    "build": "tsc",
    "test": "jest",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "test:e2e": "playwright test",
    "test:persistence": "jest --testPathPattern=spec/persistence",
    "test:routes": "jest --testPathPattern=spec/routes",
    "dev": "nodemon -L --watch src --ignore src/frontend --exec \"tsc && node dist/index.js\"",
    "lint": "eslint src/",
    "lint:architecture": "depcruise src --config .dependency-cruiser.cjs",
    "frontend:dev": "cd src/frontend && npm run dev",
    "frontend:build": "cd src/frontend && npm run build"
  },
  "dependencies": {
    "express": "^5.2.1",
    "mysql2": "^3.17.5",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "wait-port": "^1.1.0"
  },
  "resolutions": {
    "ansi-regex": "5.0.1"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "dependency-cruiser": "^17.3.8",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.14",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
